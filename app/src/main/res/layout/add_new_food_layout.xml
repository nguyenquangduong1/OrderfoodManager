<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:id="@+id/edtName"
            android:text=""
            android:hint="Tên Món Ăn"
            android:textColorHint="#333"
            android:textColor="@color/back"
            android:textSize="34sp"
            app:met_baseColor="@color/back"
            app:met_maxCharacters="11"
            android:inputType="textMultiLine"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/back"
            app:met_singleLineEllipsis="true"
            android:layout_height="wrap_content" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:id="@+id/edtDescription"
            android:hint="Chi tiết món ăn"
            android:textColorHint="@color/back"
            android:textColor="@color/back"
            android:textSize="24sp"
            app:met_baseColor="@color/back"
            app:met_maxCharacters="11"
            android:inputType="textMultiLine"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/back"
            app:met_singleLineEllipsis="true"
            android:layout_height="wrap_content" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:id="@+id/edtPrice"
            android:hint="Giá"
            android:textColorHint="@color/back"
            android:textColor="@color/back"
            android:textSize="34sp"
            app:met_baseColor="@color/back"
            app:met_maxCharacters="11"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/back"
            app:met_singleLineEllipsis="true"
            android:layout_height="wrap_content" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:id="@+id/edtDiscount"
            android:hint="Discount"
            android:textColorHint="@color/back"
            android:textColor="@color/back"
            android:textSize="34sp"
            app:met_baseColor="@color/back"
            app:met_maxCharacters="11"
            android:inputType="number"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/back"
            app:met_singleLineEllipsis="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">



            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/btnSelect"
                android:layout_weight="1"
                android:text="ĐỔI HÌNH"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                app:shadowColor="@android:color/black"
                android:backgroundTint="#EBC579"

                app:buttonColor="@android:color/white"
                />

            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/btnUpload"
                android:layout_weight="1"
                android:text="LƯU"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                app:shadowColor="@android:color/black"
                android:backgroundTint="#EBC579"

                app:buttonColor="@android:color/white"
                />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>